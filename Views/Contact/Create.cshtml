@using CRUD_ContactsRegister.Models
@model ContactModel
@{
	ViewData["Title"] = "Contacts List";
}

<div class="text-center">
	<div class="d-flex justify-content-around">
		<h1 class=" display-4">Create Contact</h1>
	</div>
</div>

<form asp-controller="Contact" asp-action="Create" method="post">
	<div class="form-group">
		<label for="name">Name</label>
		<input type="text" asp-for="Name" class="form-control" placeholder="Contact Name">
	</div>
	<div class="form-group">
		<label for="email">Email</label>
		<input type="email" asp-for="Email" class="form-control" placeholder="Contact Email">
	</div>
	<div class="form-group">
		<label for="phone">Phone</label>
		<input type="number" asp-for="Phone" class="form-control" placeholder="Contact Phone">
	</div>

	<button type="submit" class="btn btn-primary btn-block" role="button">Add</button>
	<button type="submit" class="btn btn-secondary btn-block" role="button" asp-controller="Contact" asp-action="Index">Go Back</button>
</form>