@{
	ViewData["Title"] = "Contacts List";
}

<div class="text-center">
	<div class="d-flex justify-content-around">
		<h1 class=" display-4">Edit Contact</h1>
	</div>
</div>

<form>
	<div class="form-group">
		<label for="name">Name</label>
		<input type="text" class="form-control" placeholder="Contact Name">
	</div>
	<div class="form-group">
		<label for="email">Email</label>
		<input type="email" class="form-control" placeholder="Contact Email">
	</div>
	<div class="form-group">
		<label for="phone">Phone</label>
		<input type="number" class="form-control" placeholder="Contact Phone">
	</div>

	<button type="submit" class="btn btn-primary btn-block" role="button">Edit</button>
	<button type="submit" class="btn btn-secondary btn-block" role="button" asp-controller="Contact" asp-action="Index">Go Back</button>
</form>