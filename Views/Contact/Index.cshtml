@using CRUD_ContactsRegister.Models
@model List<ContactModel>
@{
    ViewData["Title"] = "Contacts List";
}

<div class="text-center">
    <div class="d-flex justify-content-around">
        <h1 class=" display-4">Contacts List</h1>
        <a role="button" class="btn btn-info text-center" style="margin:20px" asp-controller="Contact" asp-action="Create">New Contact</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col">Functions</th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            {
                foreach(ContactModel contact in Model)
                {
                    <tr>
                        <th scope="row">@contact.Id</th>
                        <td>@contact.Name</td>
                        <td>@contact.Email</td>
                        <td>@contact.Phone</td>
                        <td>
                            <a role="button" class="btn btn-primary" asp-route-id="@contact.Id" asp-controller="Contact" asp-action="Edit">Edit</a>
                            <a role="button" class="btn btn-danger" asp-route-id="@contact.Id" asp-controller="Contact" asp-action="Delete">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>